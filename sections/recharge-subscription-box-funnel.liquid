<section class="section-content" data-section-id="{{ section.id }}">
  <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
    <subscription-funnel>
        <div class="text-center d-none" data-nav-subscription_breadcrumbs>
          {% render 'funnel-breadcrumbs' %}
         </div>
         {% comment %} funnel steps start {% endcomment %}
         {% for block in section.blocks %}
          {% if block.type == 'step-1' %}
            {% render 'subscription-funnel-step1' , block: block %}
          {% endif %}
          {% if block.type == 'step-2' %}
            {% render 'subscription-funnel-step2' , block: block %}
          {% endif %}
          {% if block.type == 'step-3' %}
            {% render 'subscription-funnel-step3' , block: block %}
          {% endif %}
          {% if block.type == 'step-4' %}
            {% render 'subscription-funnel-step4' , block: block %}
          {% endif %}
        {% endfor %}
        {% comment %} funnel steps end {% endcomment %}
    </subscription-funnel>
  </div>
</section>
{% schema %}
{
    "name": "Subscription Funnel",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "checkbox",
        "id": "fluid_layout",
        "label": "Full Width Layout?",
        "default": false
      }
    ],
    "blocks": [
      {
        "name": "Choose plan",
        "type": "step-1",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Add Heading"
          },
          {
            "type": "product",
            "id": "product1",
            "label": "Select Product 1"
          },
          {
            "type": "product",
            "id": "product2",
            "label": "Select Product 2"
          },
          {
            "type": "product",
            "id": "product3",
            "label": "Select Product 3"
          }
        ]
      },
      {
        "name": "Choose Products",
        "type": "step-2",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Add Heading"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Add Sub Heading"
          },
          {
            "type": "collection",
            "id": "sub_collection",
            "label": "Select collection"
          }
        ]
      },
      {
        "name": "Add addons",
        "type": "step-3",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Add Heading"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Add Sub Heading"
          },
          {
            "type": "collection",
            "id": "sub_collection",
            "label": "Select collection"
          }
        ]
      },
      {
        "name": "Summary",
        "type": "step-4",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Add Heading"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Add Sub Heading"
          }
        ]
      }
   ]
}
{% endschema %}
