<section class="section-content subscription-funnel" data-section-id = "{{ section.id }}">
  <subscription-funnel>
    <div class="text-center">
      {% render 'simple-funnel-breadcrumbs' %}
     </div>
    <div class="shadow p-5 p-lg-7 subscription-funnel-2">
      {% for block in section.blocks %}
        {% if block.type == 'step-1' %}
          {% render 'subscrption-simple-funnel-step1', block: block %}
        {% endif %}  
        {% if block.type == 'step-2' %}
          {% render 'subscrption-simple-funnel-step2', block: block %}
        {% endif %} 
        {% if block.type == 'step-3' %}
          {% render 'subscrption-simple-funnel-step3', block: block %}
        {% endif %}  
        {% if block.type == 'step-4' %}
          {% render 'subscrption-simple-funnel-step4', block: block %}
        {% endif %}    
        {% if block.type == 'step-5' %}
          {% render 'subscrption-simple-funnel-step5', block: block %}
        {% endif %}    
      {% endfor %}   
    </div>   
  </subscription-funnel>
</section>

{% schema %}
{
  "name":"Funnel",
  "blocks":[
    {
      "name":"choose product",
      "type":"step-1",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Add Heading"
        },
        {
          "type":"product",
          "id":"product1",
          "label":"Select product 1"
        },
        {
          "type":"product",
          "id":"product2",
          "label":"Select product 2"
        },
        {
          "type":"product",
          "id":"product3",
          "label":"Select product 3"
        }
      ]
    },
    {
      "name":"Choose Amount",
      "type":"step-2",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Add Heading"
        },
        {
          "type":"text",
          "id":"number1",
          "label":"Add quantity numbers"
        },
        {
          "type":"text",
          "id":"number2",
          "label":"Add quantity numbers"
        },
        {
          "type":"text",
          "id":"number3",
          "label":"Add quantity numbers"
        }
      ]
    },
    {
      "name":"Frequency",
      "type":"step-3",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Add Heading"
        },
        {
          "type":"text",
          "id":"frequency1",
          "label":"Add Frequency"
        },
        {
          "type":"text",
          "id":"frequency2",
          "label":"Add Frequency"
        },
        {
          "type":"text",
          "id":"frequency3",
          "label":"Add Frequency"
        },
        {
          "type":"text",
          "id":"frequency4",
          "label":"Add Frequency"
        }
      ]
    },
    {
      "name":"addons",
      "type":"step-4",
      "settings":[
        {
          "type":"collection",
          "id":"addon",
          "label":"select Add-On Collection"
        }
      ]
    },
    {
      "name":"summary",
      "type":"step-5",
      "settings":[
        {
          "type": "text",
          "id": "heading",
          "label": "Add Heading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Add Sub Heading"
        }
      ]
    }
  ]
}
{% endschema %}