<section class="section-content subscription-funnel" data-section-id = "{{ section.id }}">
  <subscription-funnel>
    {% for block in section.blocks %}
      {% if block.type == 'step-1' %}
        {% render 'subscrption-simple-funnel-step1', block: block %}
      {% endif %}  
      {% if block.type == 'step-2' %}
        {% render 'subscrption-simple-funnel-step2', block: block %}
      {% endif %}  
    {% endfor %}      
  </subscription-funnel>
</section>

{% schema %}
{
  "name":"Funnel",
  "blocks":[
    {
      "name":"choose product",
      "type":"step-1",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Add Heading"
        },
        {
          "type":"product",
          "id":"product1",
          "label":"Select product 1"
        },
        {
          "type":"product",
          "id":"product2",
          "label":"Select product 2"
        },
        {
          "type":"product",
          "id":"product3",
          "label":"Select product 3"
        }
      ]
    },
    {
      "name":"choose Variant",
      "type":"step-2",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Add Heading"
        }
      ]
    }
  ]
}
{% endschema %}