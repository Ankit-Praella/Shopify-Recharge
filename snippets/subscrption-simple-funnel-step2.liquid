{% comment %} select quantity {% endcomment %}
<select-quantity>
   <div  class="d-none p-5 p-lg-7" data-selector="2" data-step-name="select-quantity">
      <h2 class="text-center  pb-5 pb-lg-7">
         {{ block.settings.heading }}
      </h2>
      <div class="row" data-next_selector = "3">
         {% for i in (1..3) %}
            {% assign quantity = 'number' | append: i %}
            {% assign qty =  block.settings[quantity] %}
            <div class="col-12 mb-3 mb-lg-0 col-lg-4"  data-qty-box="{{i}}">
            <div class="text-center">
            <h3 quantity-number="{{qty}}" class="qty-box">{{qty}} bags</h3>
            </div>
            </div>
         {% endfor %} 
      </div>
   </div>
</select-quantity>
